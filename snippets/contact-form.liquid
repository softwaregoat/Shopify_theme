{% form 'contact' %}
  {% if form.errors %}
    <div class="alert-message error">
      <span>{{ 'contact.error' | t }}</span>
    </div>
  {% endif %}

  {% if form.posted_successfully? %}
    <div class="alert-message success">
      <span>{{ 'contact.success' | t }}</span>
    </div>
  {% else %}
    <div class="field-wrap author">
      <label for="contact-form__name">
        {{- 'general.name' | t -}}
      </label>

      <input
        class="
          field
          {% if form.errors contains 'author' %}
            error
          {% endif %}
        "
        id="contact-form__name"
        type="text"
        name="contact[name]"
        placeholder="{{ 'general.name_placeholder' | t }}"
        value=""
      >
    </div>

    <div class="field-wrap email">
      <label for="contact-form__email">
        {{- 'general.email' | t -}}
      </label>

      <input
        class="
          field
          {% if form.errors contains 'email' %}
            error
          {% endif %}
        "
        id="contact-form__email"
        type="text"
        name="contact[email]"
        placeholder="{{ 'general.email_placeholder' | t }}"
        value=""
      >
    </div>

    <div class="field-wrap body">
      <label for="contact-form__message">
        {{- 'general.message' | t -}}
      </label>

      <textarea
        class="
          field
          {% if form.errors contains 'body' %}
            error
          {% endif %}
        "
        id="contact-form__message"
        name="contact[body]"
      ></textarea>
    </div>

    <button
      class="
        action-button
        submit-button
      "
      type="submit"
    >
      {{- 'general.submit' | t -}}
    </button>
  {% endif %}
{% endform %}
