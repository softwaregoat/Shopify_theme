{% liquid
  assign fixed_height_mobile = true
  assign fixed_height_desktop = true

  if section.settings.mobile_height == 'natural'
    assign fixed_height_mobile = false
  endif

  if section.settings.desktop_height == 'natural'
    assign fixed_height_desktop = false
  endif
%}

<script
  type="application/json"
  data-section-type="dynamic-slideshow"
  data-section-id="{{ section.id }}"
  data-section-data>
  {
  "transition": {{ section.settings.transition | json }},
  "parallax": {{ section.settings.parallax | json }},
  "fixedHeightMobile": {{ fixed_height_mobile | json }},
  "fixedHeightDesktop": {{ fixed_height_desktop | json }}
  }
</script>

<section
  class=" home-section slideshow clearfix slideshow--transition-{{ section.settings.transition }} slideshow--desktop-height-{{ section.settings.desktop_height }} slideshow--mobile-height-{{ section.settings.mobile_height }} {% if section.settings.full-width == false %} content-area {% endif %} "
  {% if section.settings.autoplay_enable %}data-autoplay="{{ section.settings.autoplay_interval | times: 1000 }}"{% endif %}
  {% if section.settings.parallax %}
  data-parallax
  {% endif %}
  data-full-width="{{ section.settings.full-width }}">
  <span class="prev">
    {% render 'icon' with 'arrow-thin-left' %}
  </span>

  <span class="next">
    {% render 'icon' with 'arrow-thin-right' %}
  </span>

  <ul class="jump-to-slide"></ul>

  <div class="slideshow--viewport" data-slideshow-viewport>
    {% for block in section.blocks %}
      {% assign image = block.settings.image %}
      {% assign link = block.settings.link %}
      {% assign caption_opacity = block.settings.caption_opacity | divided_by: 100.0 %}
      {% assign caption = block.settings.caption %}
      {% assign caption_font_size = block.settings.caption_font_size %}
      {% assign caption_font = block.settings.caption_font %}
      {% assign caption_color = block.settings.caption_color %}
      {% assign caption_line_height = block.settings.caption_line_height %}
      {% assign caption_rotation_angle = block.settings.caption_rotation_angle %}
      {% assign button = block.settings.button | escape %}
      {% assign button_color = block.settings.button_color %}
      {% assign alignment = block.settings.alignment %}


      {%- assign caption_font_family = caption_font.family -%}
      {%- assign caption_font_fallback_families = caption_font.fallback_families -%}
      {%- assign caption_font_style = caption_font.style -%}
      {%- assign caption_font_weight = caption_font.weight -%}



      {% if caption_font_size > 150 %}
        {% assign caption_font_size = 150 %}
      {% endif %}
      {%- capture image_html -%}
        {% if image %}
          {%
             render 'rimg'
           img: image,
           size: '1440x640',
           lazy: true,
           focal_point: image.presentation.focal_point, %}
        {% else %}
          {{ 'lifestyle-1' | placeholder_svg_tag: 'placeholder-svg' }}
        {% endif %}
      {%- endcapture -%}

      <div
        class="
        slide
        {% if forloop.index == 1 %}
          active
        {% endif %}
        "
        {% if section.settings.desktop_height == 'natural' %}
        style="--image-aspect-ratio: {{ image.aspect_ratio }}"
        {% endif %}
        {{ block.shopify_attributes }}>
        <div
          class="image-wrap">
          {% if block.settings.show_overlay and block.settings.background != blank %}
            {% assign opacity = block.settings.opacity | times: 0.01 %}
            {% assign overlay = block.settings.background | color_modify: 'alpha', opacity %}
            <div class="image-overlay" style="background-color: {{ overlay }};"></div>
          {% endif %}

          {% if link != blank %}
            <a href="{{ link }}">
              {{- image_html -}}
            </a>
          {% else %}
            {{- image_html -}}
          {% endif %}
        </div>

        {% if caption != blank or button != blank %}
          <div class="content-outer-wrap">
            <a class="mobile-link" href="{{ link }}"></a>

            <div class="content-inner-wrap {{ alignment }}">
              {% if alignment == 'left middle' %}
                {% if button != blank %}
                  <div class="slide-half-content call-to-action-wrap" style="min-height: 50px;width:50%;">
                    <span
                      class="call-to-action"
                      href="{{ link }}"
                      style="color:{{ button_color }};">
                      {{ button }}
                    </span>
                  </div>
                {% endif %}
                {% if caption != blank %}
                  <div
                    class="slide-half-content rotate-caption">
                    <h1 class="tagline rotate-text" style="font-family:'{{caption_font_family}}'!important; font-style:{{caption_font_style}}; font-weight:{{caption_font_weight}}; text-align:left; font-size:{{caption_font_size}};color:{{ caption_color }}; line-height:{{ caption_line_height }}; opacity:{{caption_opacity}}; transform-origin: top left; transform: translateY(100%) rotate({{caption_rotation_angle}}deg);">
                      {{ caption | escape }}
                    </h1>
                  </div>

                {% endif %}
              {% endif %}
              {% if alignment == 'right middle' %}

                {% if caption != blank %}
                  <div class="slide-half-content rotate-caption">
                    <h1 class="tagline rotate-text" style="font-family:'{{caption_font_family}}'!important; font-style:{{caption_font_style}}; font-weight:{{caption_font_weight}}; text-align:left; font-size:{{caption_font_size}};color:{{ caption_color }};line-height:{{ caption_line_height }}; transform:rotate({{ caption_rotation_angle }}deg);opacity:{{caption_opacity}};">{{ caption | escape }}</h1>
                  </div>

                {% endif %}
                {% if button != blank %}
                  <div class="slide-half-content call-to-action-wrap" style="min-height: 50px;width:100%;">
                    <span
                      class="call-to-action"
                      href="{{ link }}"
                      style="background-color:transparent!important; border:2px solid white;     padding: 10px;border-radius:5px;color:{{ button_color }}">
                      {{ button }}
                    </span>
                  </div>
                {% endif %}
              {% endif %}
              {% comment %} </div> {% endcomment %}
            </div>
          </div>
        {% endif %}

        {% if link != blank %}
          <a class="slideshow-link" href="{{ link }}"></a>
        {% endif %}
      </div>
    {% endfor %}
  </div>
</section>

{% schema %}
  {
    "name": "Slideshow",
    "class": "shopify-section--slideshow",
    "max_blocks": 5,
    "settings": [
      {
        "type": "select",
        "id": "desktop_height",
        "label": "Desktop height",
        "options": [
          {
            "value": "natural",
            "label": "Natural"
          },
          {
            "value": "small",
            "label": "500px"
          },
          {
            "value": "medium",
            "label": "600px"
          },
          {
            "value": "large",
            "label": "700px"
          }, {
            "value": "extra-large",
            "label": "800px"
          }
        ],
        "default": "natural"
      },
      {
        "type": "select",
        "id": "mobile_height",
        "label": "Mobile height",
        "options": [
          {
            "value": "natural",
            "label": "Natural"
          }, {
            "value": "small",
            "label": "300px"
          }, {
            "value": "medium",
            "label": "400px"
          }, {
            "value": "large",
            "label": "500px"
          }
        ],
        "default": "natural"
      },
      {
        "type": "checkbox",
        "id": "full-width",
        "label": "Enable full width",
        "default": true
      },
      {
        "type": "checkbox",
        "id": "parallax",
        "label": "Enable parallax",
        "default": false
      }, {
        "type": "checkbox",
        "id": "autoplay_enable",
        "label": "Auto-rotate slides",
        "default": false
      }, {
        "type": "select",
        "id": "transition",
        "label": "Slide transition",
        "options": [
          {
            "value": "slide",
            "label": "Slide"
          }, {
            "value": "fade",
            "label": "Fade"
          }
        ],
        "default": "slide"
      }, {
        "type": "range",
        "id": "autoplay_interval",
        "label": "Rotation interval",
        "unit": "sec",
        "min": 3,
        "max": 10,
        "step": 1,
        "default": 5
      }
    ],
    "blocks": [
      {
        "type": "feature",
        "name": "Slide",
        "settings": [
          {
            "type": "image_picker",
            "id": "image",
            "label": "Image"
          },
          {
            "type": "textarea",
            "id": "caption",
            "label": "Caption",
            "default": "Introduce customers to your shop with lifestyle imagery and product photography."
          },
          {
            "type": "number",
            "id": "caption_font_size",
            "label": "Caption Font Size",
            "default": 15
          },
          {
            "type": "font_picker",
            "id": "caption_font",
            "label": "Caption Font",
            "default": "work_sans_n6"
          }, {
            "type": "color",
            "id": "caption_color",
            "label": "Caption Color",
            "default": "#FFFFFF"
          }, {
            "id": "caption_opacity",
            "type": "range",
            "label": "Caption Opacity",
            "min": 1,
            "max": 100,
            "step": 1,
            "unit": "%",
            "default": 20
          }, {
            "type": "number",
            "id": "caption_line_height",
            "label": "Caption Line Height",
            "default": 1
          }, {
            "type": "number",
            "id": "caption_rotation_angle",
            "label": "Caption Rotation Angle",
            "default": -90
          }, {
            "type": "text",
            "id": "button",
            "label": "Button text",
            "default": "Your call to action button"
          }, {
            "type": "color",
            "id": "button_color",
            "label": "Button Color",
            "default": "#FFFFFF"
          }, {
            "type": "url",
            "id": "link",
            "label": "Slide link URL"
          }, {
            "type": "select",
            "id": "alignment",
            "label": "Text position",
            "options": [
              {
                "value": "center-center",
                "label": "Center"
              },
              {
                "value": "center bottom",
                "label": "Center bottom"
              },
              {
                "value": "center top",
                "label": "Center top"
              },
              {
                "value": "left middle",
                "label": "Left center"
              }, {
                "value": "left bottom",
                "label": "Left bottom"
              }, {
                "value": "left top",
                "label": "Left top"
              }, {
                "value": "right middle",
                "label": "Right center"
              }, {
                "value": "right bottom",
                "label": "Right bottom"
              }, {
                "value": "right top",
                "label": "Right top"
              }
            ],
            "default": "center-center"
          }, {
            "type": "header",
            "content": "Overlay"
          }, {
            "id": "show_overlay",
            "type": "checkbox",
            "label": "Show overlay"
          }, {
            "id": "background",
            "type": "color",
            "label": "Color",
            "default": "#000"
          }, {
            "id": "opacity",
            "type": "range",
            "label": "Opacity",
            "min": 1,
            "max": 100,
            "step": 1,
            "unit": "%",
            "default": 20
          }
        ]
      }
    ],
    "presets": [
      {
        "category": "Image",
        "name": "Slideshow",
        "blocks": [
          {
            "type": "feature"
          }, {
            "type": "feature"
          }
        ]
      }
    ],
    "disabled_on": {
      "groups": ["*"]
    }
  }
{% endschema %}