<script
  type="application/json"
  data-section-id="{{ section.id }}"
  data-section-type="static-faq"
></script>

<main class="content content-area">
  {% render 'breadcrumbs' %}

  <header class="page-masthead">
    <div class="page-title">
      <h1 class="label">{{ page.title }}</h1>
    </div>
  </header>

  <div class="faq page-container">
    <div class="page-content">
      {% if page.content != blank %}
        <div class="faq-rte rte" data-rte>
          {{ page.content }}
        </div>
      {% endif %}

      {% if section.blocks.size > 0 %}
        {% for block in section.blocks %}
          <div class="faq-block">
            <h2
              class="faq-heading {% if forloop.index0 == 0 %}active{% endif %}"
              data-faq-toggle
              {{ block.shopify_attributes }}
            >
              <span class="faq-title">
                {{ block.settings.title | escape }}
              </span>

              <div class="faq-button">
                {% render 'icon' with 'down-arrow' %}
                {% render 'icon' with 'minus' %}
              </div>
            </h2>

            <div class="faq-content {% if forloop.index0 == 0 %}active{% endif %}">
              <div class="rte">
                {{ block.settings.content }}
              </div>
            </div>
          </div>
        {% endfor %}
      {% endif %}
    </div>
  </div>
</main>

{% schema %}
{
  "name": "FAQ",
  "class": "static-section-faq",
  "settings": [
    {
      "type": "checkbox",
      "id": "show-breadcrumbs",
