<section
  class="
    content
    content-area
    customer
    reset-password
  "
>
  {% render 'breadcrumbs' %}

  <div class="page-title">
    <span class="label">
      {{- 'customer.reset_password.header' | t -}}
    </span>
  </div>

  <div class="account-form">
    {% form 'reset_customer_password', class: 'reset-password-form' %}
      <p class="message">
        {{- 'customer.reset_password.subtext' | t: email: email -}}
      </p>

      {% if form.errors %}
        <div class="error-message">
          <span>{{ form.errors | default_errors }}</span>
        </div>
      {% endif %}

      <div class="field-wrap password">
        <label for="reset-password-form__password">
          {{- 'general.password' | t -}}
        </label>

        <input
          class="field"
          id="reset-password-form__password"
          type="password"
          name="customer[password]"
        >
      </div>

      <div class="field-wrap password-confirmation">
        <label for="reset-password-form__password-confirmation">
          {{- 'customer.general.password_confirmation' | t -}}
        </label>

        <input
          class="field"
          id="reset-password-form__password-confirmation"
          type="password"
          name="customer[password_confirmation]"
        >
      </div>

      <button
        class="
          action-button
          submit-button
        "
        type="submit"
      >
        {{- 'customer.reset_password.submit' | t -}}
      </button>
    {% endform %}
  </div>
</section>
